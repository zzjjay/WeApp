.container {
min-height: 100%;
padding: 20rpx 0rpx;
}

.touch-item {
font-size: 14px;
display: flex;
background-color: white;
border:0.5rpx solid #d9d9d9;
border-bottom: 0.5rpx solid #d9d9d9 ;
width: 100%;
height:52px;
overflow: hidden;
margin: 0 0 5px 0;
border-radius: 5px;
}
.content {
width:100%;
padding: 0px;
line-height: 25px;
margin-right:0;
-webkit-transition: all 0.4s;
transition: all 0.4s;
-webkit-transform: translateX(90px);
transform: translateX(90px);
margin-left: -90px
}
.del {
background-color: orangered;
width: 90px;
height: 52px;
display: flex;
flex-direction: column;
align-items: center;
justify-content: center;
color: #fff;
-webkit-transform: translateX(90px);
transform: translateX(90px);
-webkit-transition: all 0.4s;
transition: all 0.4s;
margin: 0 0 15px 0;
border-radius: 5px;
font-size: 16px
}
.touch-move-active .content,
.touch-move-active .del {
-webkit-transform: translateX(0);
transform: translateX(0);
}
